<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<DialogPane fx:controller="com.markov.todolist.DialogController"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label fx:id="descriptionLabel" GridPane.rowIndex="1" GridPane.columnIndex="0" textFill="red"/>
            <Label text="Details:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailsArea" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Deadline:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label fx:id="datePickerLabel" GridPane.rowIndex="4" GridPane.columnIndex="0" textFill="red"/>
        </GridPane>
    </content>
</DialogPane>